@inject IServicoAutenticacaoApp ServicoAuth
@inject NavigationManager Navigation

@if (_autenticado)
{
    @ChildContent
}
else if (_verificando)
{
    <div class="auth-guard-loading">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Verificando autenticação...</span>
        </div>
        <p class="mt-3">Verificando autenticação...</p>
    </div>
}

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;

    private bool _autenticado = false;
    private bool _verificando = true;

    protected override async Task OnInitializedAsync()
    {
        await VerificarAutenticacao();
    }

    private async Task VerificarAutenticacao()
    {
        try
        {
            _verificando = true;
            StateHasChanged();

            _autenticado = await ServicoAuth.EstaAutenticadoAsync();

            if (!_autenticado)
            {
                Navigation.NavigateTo("/login");
            }
        }
        catch
        {
            _autenticado = false;
            Navigation.NavigateTo("/login");
        }
        finally
        {
            _verificando = false;
            StateHasChanged();
        }
    }
}
